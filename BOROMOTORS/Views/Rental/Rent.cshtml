@model BOROMOTORS.Models.Rental

<h2>Наеми мотор</h2>

<form asp-action="Rent" method="post">
    <input type="hidden" asp-for="MotorId" />

    <div class="form-group">
        <label asp-for="CustomerName"></label>
        <input asp-for="CustomerName" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="StartDate"></label>
        <input asp-for="StartDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label asp-for="EndDate"></label>
        <input asp-for="EndDate" type="date" class="form-control" required />
    </div>

    <div class="form-group">
        <label>Цена за наем: </label>
        <span>@Model.Price.ToString("C")</span>
    </div>

    
</form>
