@model IEnumerable<BOROMOTORS.Models.DirtBike>
@{
    ViewData["Title"] = "Нашите мотори";
}

<h1>@ViewData["Title"]</h1>

<form method="get" asp-action="Index">
    <!-- Търсене по модел или марка -->
    <input type="text" name="searchString" placeholder="Търси по модел или марка" value="@ViewData["CurrentFilter"]" />

    <!-- Dropdown за марка -->
    <select name="manufacturer">
        <option value="">Всички марки</option>
        @foreach (var manufacturer in ViewBag.Manufacturers)
        {
            <option value="@manufacturer" @(manufacturer == ViewData["Manufacturer"] ? "selected" : "")>@manufacturer</option>
        }
    </select>

    <!-- Филтър по минимална и максимална цена -->
    <input type="number" name="minPrice" placeholder="Минимална цена" value="@ViewData["MinPrice"]" />
    <input type="number" name="maxPrice" placeholder="Максимална цена" value="@ViewData["MaxPrice"]" />

    <button type="submit">Приложи филтри</button>
</form>

<table>
    <thead>
        <tr>
            <th>Модел</th>
            <th>Марка</th>
            <th>Цена</th>
            <th>Описание</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var bike in Model)
        {
            <tr>
                <td>@bike.Model</td>
                <td>@bike.Manufacturer</td>
                <td>@bike.Price</td>
                <td>@bike.Description</td>
            </tr>
        }
    </tbody>
</table>

